<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">

      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel"><%= article.title %></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <%= @article.photo.attached? ? (cl_image_tag @article.photo.key, crop: :fill) : image_tag(asset_path("mirror.jpg")) %>
        <div class="article-content">
          <h1 style="text-transform:uppercase"><%= @article.title %></h1>
          <%= link_to edit_article_path(@article) do %>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
          <%= link_to article_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{@article.title} ?"} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
          <%= link_to articles_path do %>
            <i class="fa-solid fa-book"></i>
          <% end %>
          <p><%= @article.message %></p>
          <%= link_to @article.url, @article.url%>
        </div>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-ghost" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
