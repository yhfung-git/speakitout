<div class="container">
<%= link_to "New Article", new_article_path, class:"btn btn-ghost" %>
  <% @articles.each do |article| %>
    <div>
      <h2><%= article.title %></h2>
      <p><%= article.url %></p>
      <p><%= article.message %></p>
      <%= link_to "Details", article_path(article), class: "btn btn-ghost" %>
    </div>
  <% end %>
</div>
