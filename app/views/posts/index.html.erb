<%= render "shared/slide" %>

<div class="container home d-flex justify-content-between text-center">
  <div>
    <%= render "shared/category" %>
  </div>

  <%# Middle Posts %>
  <div class="container vh-100 flex-grow-1 my-3">
    <% @posts.each do |post| %>
      <%= link_to post_path(post) do %>
        <div class="d-flex border p-2 rounded-2 mb-3 justify-content-center post post-item">
          <div class="me-3">
            <%= current_user.photo.attached? ? (cl_image_tag current_user.photo.key, crop: :fill, class: "rounded-circle avatar me-0") : image_tag(asset_path('https://kitt.lewagon.com/placeholder/users/ssaunier'), class: "rounded-circle avatar me-0") %>
            <span class="text-muted fs-6">Posted by <%= current_user.nickname %></span>
            <p class="mb-0 fw-bold fs-5" ><%= post.title %></p>
            <p class="mb-0" ><%= post.content %></p>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="pagination" id="bottom">
      <%= will_paginate @posts, :container => false, :params => {:anchor => "bottom"} %>
    </div>
  </div>

  <div class="collection mt-3 mx-1">
    <h2>Top 5 collection</h2>
    <h3>1 collection</h3>
    <h3>2 collection</h3>
    <h3>3 collection</h3>
    <h3>4 collection</h3>
    <h3>5 collection</h3>
  </div>

</div>
