<div class="container rounded-3 border new-post p-3">
  <div class="d-flex align-content-center">
    <%= current_user.photo.attached? ? (cl_image_tag current_user.photo.key, crop: :fill, class: "rounded-circle avatar me-0") : image_tag(asset_path('https://kitt.lewagon.com/placeholder/users/ssaunier'), class: "rounded-circle avatar me-0") %>
    <span class="ms-3 d-flex align-items-center text-muted">Posted by <strong style="text-transform:uppercase"><%= @post.user.nickname %></strong> </span>
  </div>
  <div class="mt-3">
    <p class="fw-bold"> <%= @post.title %> </p>
    <p class="mt-1"> <%= @post.content %> </p>
    <div class="tool-bar mt-3">
      <%= link_to "Delete", post_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{@post.title} ?"} %>
      <%= link_to "Edit", edit_post_path(@post)%>
    </div>
  </div>
  <div class="mt-2 comment-block pb-3 border-bottom">
    <textarea name="Text1" placeholder="Comment"></textarea>
  </div>
  <div class="comment-list">
  </div>
</div>
